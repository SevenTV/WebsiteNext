{
	"name": "seventv-website",
	"displayName": "7TV Website",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"gh-packages-key": "yarn gh-packages-key:undo && cat .npmrc.rev | rev >> .npmrc && git update-index --skip-worktree .npmrc",
		"gh-packages-key:undo": "git update-index --no-skip-worktree .npmrc && git restore .npmrc",
		"dev": "vite --mode dev",
		"build:production": "vue-tsc --noEmit && vite build",
		"build:stage": "vue-tsc --noEmit && vite build --mode stage",
		"build": "vue-tsc --noEmit && vite build --mode dev",
		"preview": "vite preview",
		"format": "prettier -w .",
		"lint:style": "stylelint '**/*.{vue,scss,css}' --ignore-path .gitignore",
		"lint:js": "eslint --ext .js,.vue,.ts --ignore-path .gitignore .",
		"lint:style:fix": "stylelint --fix '**/*.{vue,scss,css}' --ignore-path .gitignore",
		"lint:js:fix": "eslint --fix --ext .js,.vue,.ts --ignore-path .gitignore .",
		"lint": "yarn lint:js && yarn lint:style",
		"lint:fix": "yarn lint:js:fix && yarn lint:style:fix"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.0.3",
		"@intlify/unplugin-vue-i18n": "^1.2.0",
		"@seventv/theming": "~0.1",
		"@seventv/ui": "~0.1",
		"@vueuse/core": "^10.3.0",
		"@vueuse/head": "^1.1.26",
		"vue": "^3.3.4",
		"vue-i18n": "^9.2.2",
		"vue-router": "^4.2.4"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@types/node": "^20.4.9",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vue/eslint-config-prettier": "^8.0.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"@vue/tsconfig": "^0.4.0",
		"eslint": "^8.45.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-vue": "^9.15.1",
		"postcss": "^8.4.19",
		"postcss-html": "^1.5.0",
		"postcss-scss": "^4.0.6",
		"prettier": "^3.0.0",
		"sass": "^1.64.1",
		"stylelint": "^15.10.2",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-config-standard-scss": "^10.0.0",
		"stylelint-config-standard-vue": "^1.0.0",
		"stylelint-scss": "^5.0.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.12",
		"vue-tsc": "^1.8.8"
	}
}
